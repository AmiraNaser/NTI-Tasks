{{>header}}
{{>navbar}}
<section class="container my-5">
    <form method="post">
        <div class="mb-3">
            <input placeholder="Name" name="name" class="form-control" value="{{userData.name}}">
        </div>
        <p>{{nameErr}}</p>
        <div class="mb-3">
            <input placeholder="Age" name="age" class="form-control"
             value="{{userData.age}}">
        </div>
               
        <div class="form-check">
            <input class="form-check-input" type="radio" name="status" id="flexRadioDefault1" value="active" {{#if isActive}}checked{{/if}}>
            <label class="form-check-label" for="flexRadioDefault1">
            Active
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="status" id="flexRadioDefault2" value="inactive"{{#if isInactive}}checked{{/if}}>
            <label class="form-check-label" for="flexRadioDefault2">
            Inactive
            </label>
        </div>

        <div class="mb-3">
            <button class="btn btn-primary">Edit</button>
        </div>
    </form>
</section>
{{>footer}}